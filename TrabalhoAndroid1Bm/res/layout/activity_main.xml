<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:shrinkColumns="0"
    android:stretchColumns="1"
    tools:context="br.univel.examplolayoutandroid.MainActivity" >

    <TableRow
        android:id="@+id/tblRowNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/txtNome"
            android:text="Nome"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hintNome" >

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tblRowSobreNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblSobreNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/txtSobreNome"
            android:text="Sobrenome" />

        <EditText
            android:id="@+id/txtSobreNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hintNome" >

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tblRowIdade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/TxtIdade"
            android:text="Idade" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </TableRow>

    <TableRow
        android:id="@+id/tblRowSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lblSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/spnSexo"
            android:text="Sexo" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:drawSelectorOnTop="true"
            android:entries="@array/spinnerItems"
            android:prompt="@string/spin" />
    </TableRow>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        tools:ignore="HardcodedText" />

</TableLayout>